<Window x:Class="SalaryCalculation.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryCalculation"
        mc:Ignorable="d"
            Title="Система управления выдачи зарплаты и премии" Height="300" Width="681">
    <Grid Background="#F0F8FF" Margin="0,0,-140,0">
        <StackPanel Orientation="Horizontal" Margin="20">
            <StackPanel Orientation="Vertical" Width="200">
                <Label Content="ФИО:"/>
                <TextBox x:Name="TextBox_FIO" Width="200"/>

                <Label Content="ID:"/>
                <TextBox x:Name="TextBox_ID" Width="200"/>

                <Label Content="Должность:"/>
				<ComboBox x:Name="ComboBox_Position" Width="200"> </ComboBox>

                <Label Content="Стаж работы:"/>
				<ComboBox x:Name="ComboBox_Experience" Width="200"> </ComboBox>
				
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0" Width="200">
                <Label Content="Часы работы в день:"/>
                <TextBox x:Name="TextBox_HoursWorked" Width="200"/>

                <Label Content="Модели в день:"/>
                <TextBox x:Name="TextBox_ModelsDesigned" Width="200"/>

                <Label Content="Опоздания:"/>
                <TextBox x:Name="TextBox_LateCount" Width="200"/>

                <Label Content="Прогулы:"/>
                <TextBox x:Name="TextBox_AbsentCount" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0" Width="200">
                <Label Content="Бракованные модели:"/>
                <TextBox x:Name="TextBox_DefectiveModels" Width="200"/>

                <Label Content="Телефон на работе:"/>
                <TextBox x:Name="TextBox_PhoneUsageCount" Width="200"/>

                <Label Content="Уход раньше времени:"/>
                <TextBox x:Name="TextBox_EarlyLeaveCount" Width="200"/>

                <Button Content="Посчитать" Width="100" Click="Button_Click" Height="30" Margin="0,10,0,0"/>
            </StackPanel>
		</StackPanel>
    </Grid>
</Window>
